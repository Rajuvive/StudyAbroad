<% if (formContent === 'profile' || formContent === 'signup') { %>
<div class="form-group">
  <label for="name">Your Name (required)</label>
  <input
    type="text"
    class="form-control"
    id="name"
    name="name"
    placeholder="John Doe"
    value="<%= typeof user != 'undefined' ? user.name : '' %>"
  >
</div>
<% } %>

<% if (formContent === 'inquiry') { %>
<div class="form-group">
  <label for="name">Your Name (required)</label>
  <input
    type="text"
    class="form-control"
    id="name"
    name="name"
    placeholder="John Doe"
    value="<%= typeof name != 'undefined' ? name : '' %>"
  >
</div>
<% } %>

<% if (formContent === 'profile') { %>
<div class="form-group">
  <label for="introduction">Introduction</label>
  <input
    type="text"
    class="form-control"
    id="introduction"
    name="introduction"
    placeholder="Hi there!"
    value="<%= typeof user != 'undefined' ? user.introduction : '' %>"
  >
</div>

<div class="form-group">
  <label for="image">Image</label>
  <input
    type="file"
    class="form-control"
    id="image"
    name="image"
    >
  </div>

<div class="form-group">
  <label for="studentType">Type</label>
  <select name="studentType" id="studentType" class="custom-select">
    <option
      value="High School Student"
      <%= user.studentType === 'High School Student' ? 'selected' : '' %>
    >
      High School Student
    </option>
    <option
      value="College Student"
      <%= user.studentType === 'College Student' ? 'selected' : '' %>
    >
      College Student
    </option>
    <option
      value="University Student"
      <%= user.studentType === 'University Student' ? 'selected' : '' %>
    >
      University Student
    </option>
    <option
      value="Graduate School Student"
      <%= user.studentType === 'Graduate School Student' ? 'selected' : '' %>
    >
      Graduate School Student
    </option>
    <option
      value="Worker"
      <%= user.studentType === 'Worker' ? 'selected' : '' %>
    >
      Worker
    </option>
    <option
      value="Other"
      <%= user.studentType === 'Other' ? 'selected' : '' %>
    >
      Other
    </option>
  </select>
</div>
<% } %>