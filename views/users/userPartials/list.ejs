<div class="text-center text-md-left">
  <div class="list-group mb-4" id="list-tab" role="tablist">
    <!-- Favorited School List -->    
    <a
      class="list-group-item list-group-item-action active"
      id="list-favorited-list"
      data-toggle="list"
      href="#list-favorited"
      role="tab"
      aria-controls="favorited"
    >
      <i class="fas fa-thumbs-up"></i> Favorite School
    </a>
    <!-- Favorited School List End -->

    <!-- Review List -->
    <a
      class="list-group-item list-group-item-action"
      id="list-reviewed-list"
      data-toggle="list"
      href="#list-reviewed"
      role="tab"
      aria-controls="reviewed"
    >
      <i class="fas fa-comment-dots"></i> Reviewed
    </a>
    <!-- Review List End -->

    <!-- Following -->
    <a
      class="list-group-item list-group-item-action"
      id="list-following-list"
      data-toggle="list"
      href="#list-following"
      role="tab"
      aria-controls="following"
    >
      Following
    </a>
    <!-- Following End -->

    <!-- Followers -->
    <a
      class="list-group-item list-group-item-action"
      id="list-followers-list"
      data-toggle="list"
      href="#list-followers"
      role="tab"
      aria-controls="followers"
    >
      Followers
    </a>
    <!-- Followers End -->
  </div>
</div>